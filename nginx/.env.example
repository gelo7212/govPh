# Nginx environment configuration

# Local Development
NGINX_ENV=local
NGINX_SERVER_NAME=localhost
NGINX_CERT_PATH=/etc/nginx/ssl
NGINX_PORT=443

# SSL/TLS
USE_SELF_SIGNED_CERT=true
SSL_CERT_FILE=/etc/nginx/ssl/cert.pem
SSL_KEY_FILE=/etc/nginx/ssl/key.pem

# Upstream Services
REALTIME_SERVICE_URL=http://govph-realtime:3000
KONG_SERVICE_URL=http://govph-kong:8000

# Rate Limiting
API_RATE_LIMIT=100r/s
API_RATE_BURST=50
WS_RATE_LIMIT=50r/s
WS_RATE_BURST=20

# Timeouts (in seconds)
PROXY_CONNECT_TIMEOUT=60
PROXY_SEND_TIMEOUT=60
PROXY_READ_TIMEOUT=60

# WebSocket Timeouts (7 days in seconds)
WS_CONNECT_TIMEOUT=604800
WS_SEND_TIMEOUT=604800
WS_READ_TIMEOUT=604800

# Client Max Body Size
CLIENT_MAX_BODY_SIZE=20M

# Gzip Compression
GZIP_ENABLED=on
GZIP_COMP_LEVEL=6

# Worker Processes
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024

# CORS
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Security Headers
ENABLE_HSTS=false  # Set to true in production
HSTS_MAX_AGE=31536000
