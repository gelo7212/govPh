# SOS Service Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/sos-service
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sos-service?retryWrites=true&w=majority

# External Services
IDENTITY_SERVICE_URL=http://localhost:3000
CORS_ORIGIN=*

# Map Providers
DEFAULT_MAP_PROVIDER=google_maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
OPEN_MAPS_API_KEY=your_open_maps_api_key
MAPBOX_API_KEY=your_mapbox_api_key

# Logging
LOG_LEVEL=INFO

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Database (when implementing persistence)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sos_service
DB_USER=postgres
DB_PASSWORD=password

# JWT/Auth (if implementing)
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=7d
